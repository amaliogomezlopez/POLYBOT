# ============================================
# POLYMARKET API CREDENTIALS (Builder Keys)
# Obtener en: polymarket.com/settings?tab=builder
# ============================================
API_KEY=your_api_key_here
SECRET=your_secret_here
PASSPHRASE=your_passphrase_here

# ============================================
# POLYMARKET WALLET CREDENTIALS
# ============================================
# Tu Private Key (exportar desde Polymarket Settings → Export Wallet)
POLYMARKET_PRIVATE_KEY=your_private_key_here

# Tu Proxy Wallet Address (la dirección que aparece en tu perfil)
POLYMARKET_FUNDER_ADDRESS=0x_your_funder_address_here

# Tipo de firma:
# 0 = EOA (MetaMask/wallet externa)
# 1 = POLY_PROXY (Email/Magic Link)
# 2 = GNOSIS_SAFE (Browser - más común)
SIGNATURE_TYPE=1

# ============================================
# TRADING PARAMETERS
# ============================================
# Conservador para test (€50 = ~$55 USDC)
MAX_POSITION_SIZE_USDC=10
MIN_PROFIT_THRESHOLD=0.03
MAX_DAILY_LOSS_USDC=15
MAX_TOTAL_EXPOSURE_USDC=40

# Producción (ajustar según capital)
# MAX_POSITION_SIZE_USDC=100
# MIN_PROFIT_THRESHOLD=0.04
# MAX_DAILY_LOSS_USDC=100
# MAX_TOTAL_EXPOSURE_USDC=500

# ============================================
# OPERATION MODE
# ============================================
# true = simulación sin dinero real
# false = trading real (¡CUIDADO!)
PAPER_TRADING=true

ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./polymarket_bot.db

# ============================================
# TELEGRAM ALERTS (Optional)
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=